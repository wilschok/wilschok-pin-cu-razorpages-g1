@page

@model RazorPagesDemo.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}
<h1>Contact</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (Model.Feedback != null)
        {
            <div class="alert alert-info">
                @Model.Feedback
            </div>
        }
        else
        {
            <form method="post">
                <div class="form-group">
                    <label asp-for="@Model.Name" class="control-label"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Email" class="control-label"></label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Message" class="control-label"></label>
<textarea asp-for="@Model.Message" class="form-control"></textarea>
                    <span asp-validation-for="@Model.Message" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Verstuur" class="btn btn-primary" />
                </div>
            </form>
        }
    </div>
</div>
